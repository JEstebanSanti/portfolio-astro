---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Github from '../components/icons/Github.astro';
import MailFoward from '../components/icons/MailFoward.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import AboutMe from '../components/AboutMe.astro';

---

<Layout title="Welcome to Astro.">
	<main>
		<section id="top" class="w-full sm:w-[428px] md:w-[648px] lg:w-[948px] py-28 sm:py-24">
			<div class="flex flex-col items-center sm:flex-row gap-x-5">
				<img class=" rounded-full size-16 my-2" src="./photo2.jpeg" alt="me">
				<h1 class=" text-c-light-purple text-2xl sm:text-3xl md:text-5xl font-extrabold ">
					Hi, I'm Jorge Santillan
				</h1>
				<a class="text-nowrap p-3" 
				href="https://www.linkedin.com/in/jorge-santillan-2855322b1/" 
				target="_blank">	
					<Badge class=" font-semibold text-c-light-purple motion-safe:animate-spin text-sm me-2 px-3.5 py-2.5 rounded text-pretty text-md bg-c-light-blue">
						Avaible for Work
					</Badge>
				</a>
			</div>
			<h2 class="text-xl sm:text-2xl md:text-3xl text-pretty py-5 mb-5">
				Committed to technical excellence and continuous improvement, I am seeking a challenging environment where I can apply my skills in web development, proficiency in using Git, ability to work in teams, and effective problem-solving capabilities. I am excited to contribute to the success of exciting projects and to grow professionally in a dynamic and collaborative environment.
			</h2>
			<ul class="flex flex-row gap-x-4 py-4 ">
				<li>
					<SocialPill href="https://www.linkedin.com/in/jorge-santillan-2855322b1/">
						<Linkedin />
						Linkedin
					</SocialPill>
				</li>
				<li>
					<SocialPill href="https://github.com/JEstebanSanti">
						<Github />
						Github
					</SocialPill>
				</li>
				<li>
					<SocialPill href="mailto:a20311083@uthermosillo.edu.mx">
						<MailFoward />
						Mail
					</SocialPill>
				</li>
			</ul>
		</section>
		<section id="experience" class="w-full sm:w-[428px] md:w-[648px] lg:w-[948px] py-10 mb-5">
			<Experience/>
		</section>
		<section id="projects" class="w-full sm:w-[528px] md:w-[748px] lg:w-[948px] py-10 mb-5" >
			<Projects/>
		</section>
		<section id="about" class="w-full sm:w-[528px] md:w-[748px] lg:w-[948px] py-10 mb-5" >
			<AboutMe/>
		</section>
	</main>
</Layout>


