---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Github from '../components/icons/Github.astro';
import MailFoward from '../components/icons/MailFoward.astro';
import Experience from '../components/Experience.astro';

---

<Layout title="Welcome to Astro.">
	<main>
		<section id="top" class="w-full sm:w-[428px] md:w-[648px] lg:w-[948px] py-44">
			<div class="flex flex-row gap-x-5">
				<img class=" rounded-full size-20" src="./photo2.jpeg" alt="me">
				<h1 class=" text-c-light-purple text-2xl md:text-4xl flex flex-row gap-x-2 items-center font-extrabold ">
					Hi, I'm Jorge Santillan
				</h1>
				<a class="flex justify-center items-center text-nowrap" 
				href="https://www.linkedin.com/in/jorge-santillan-2855322b1/" 
				target="_blank">					
					<Badge>Avaible for Work</Badge>
				</a>
			</div>
			<h2 class=" text-xl md:text-2xl text-pretty py-5">
				As a software developer, I am passionate about developing web solutions using best practices. I have experience in developing, designing, and maintaining web applications.
			</h2>
			<ul class="flex flex-row gap-x-4 py-4 ">
				<li>
					<SocialPill href="https://www.linkedin.com/in/jorge-santillan-2855322b1/">
						<Linkedin />
						Linkedin
					</SocialPill>
				</li>
				<li>
					<SocialPill href="https://github.com/JEstebanSanti">
						<Github />
						Github
					</SocialPill>
				</li>
				<li>
					<SocialPill href="mailto:a20311083@uthermosillo.edu.mx">
						<MailFoward />
						Mail
					</SocialPill>
				</li>
			</ul>
		</section>
		<section id="experience" class="w-full sm:w-[428px] md:w-[648px] lg:w-[948px] py-28">
			<Experience/>
		</section>
	</main>
</Layout>


