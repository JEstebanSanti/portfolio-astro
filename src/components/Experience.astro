---
import ExperienceItem from "./ExperienceItem.astro"

const EXPERIENCE = [
    {
        date: "2020",
        title: "Compuson",
        desc: "Worked as a Developer assistand. Activities as Maintanance of the html of various sites following the best practices for html.",
    },
 
]
---
<h3 class="text-3xl sm:text-4xl text-pretty py-5 font-semibold">Experience</h3>
{
   EXPERIENCE.map((exp,index) => (
    <div class="border-l-4 relative bg-c-light-blue/25 p-8 rounded-sm mb-5">
            <div class="w-full flex flex-col">
				<ExperienceItem {...exp} {index}/>
			</div>
    </div>
   ))
}
